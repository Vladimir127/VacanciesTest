<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/offer_card_width"
    android:layout_height="@dimen/offer_card_height"
    android:layout_marginEnd="@dimen/margin_default"
    app:cardCornerRadius="@dimen/corner_radius"
    android:backgroundTint="@color/grey1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_half"
        android:layout_marginEnd="@dimen/margin_half">

        <ImageView
            android:id="@+id/icon_image_view"
            android:layout_width="@dimen/offer_icon_size"
            android:layout_height="@dimen/offer_icon_size"
            android:src="@drawable/ic_offer_location"
            android:layout_marginBottom="@dimen/margin_default"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/title4"
            tools:text="Поднять резюме в поиске" />

        <TextView
            android:id="@+id/link_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/green"
            android:textSize="@dimen/text1"
            tools:text="Поднять" />
    </LinearLayout>
</androidx.cardview.widget.CardView>




